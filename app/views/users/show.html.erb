<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>POINT TOTAL:</strong>
  <%= @user.points %>
</p>


<h2>Goals</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Points</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomplete_goals.each do |goal| %>
      <tr>
        <td><%= goal.title %></td>
        <td><%= goal.description %></td>
        <td><%= goal.points %></td>
        <td><%= button_to "Complete Goal", user_goal_complete_path(@user, goal), method: :get, form_class: "#" %></td><!--hit a butoon hits complete action for goals. passes along goal id that belongs to particular goal inline-->
      </tr>
    <% end %>
  </tbody>
</table><br><br><br>

<h6>Completed Goals</h6>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Points</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @completed_goals.each do |goal| %>
      <tr>
        <td><%= goal.title %></td>
        <td><%= goal.description %></td>
        <td><%= goal.points %></td>
        <!-- <td><%= goal.user_id %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>